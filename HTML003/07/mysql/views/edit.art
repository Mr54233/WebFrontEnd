<!DOCTYPE html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>编辑信息</title>
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
	</head>
	<body>
		{{each users}}
		<div style="width: 800px; margin: 10px auto">
			<h3>编辑信息</h3>
			<hr />
			<form class="form-horizontal" action="/user/edit?uid={{$value.uid}}" method="post">
				<div class="form-group">
					<label for="uname" class="col-sm-2 control-label"
						>用户名称</label
					>
					<div class="col-sm-10">
						<input
							type="text"
							class="form-control"
							id="uname"
							name="uname"
							placeholder="请输入用户名"
							value="{{ $value.uname }}"
						/>
						<span id="err"></span>
					</div>
				</div>

				<div class="form-group">
					<label for="password" class="col-sm-2 control-label"
						>登录密码</label
					>
					<div class="col-sm-10">
						<input
							type="text"
							class="form-control"
							id="password"
							name="password"
							placeholder="请输入登陆密码"
							value="{{ $value.password }}"
						/>
					</div>
				</div>

				<div class="form-group">
					<label for="age" class="col-sm-2 control-label">年龄</label>
					<div class="col-sm-10">
						<input
							type="number"
							class="form-control"
							id="age"
							name="age"
							placeholder="请输入年龄"
							value="{{ $value.age }}"
						/>
					</div>
				</div>

				<div class="form-group">
					<label for="gender" class="col-sm-2 control-label"
						>性别</label
					>
					<div class="col-sm-10">
						{{if($value.gender == '男')}}
						<input
							type="radio"
							id="man"
							name="gender"
							value="0"
							checked
						/>男
						<input
							type="radio"
							id="woman"
							name="gender"
							value="1"
						/>女
						{{else}}
						<input
							type="radio"
							id="man"
							name="gender"
							value="0"
						/>男
						<input
							type="radio"
							id="woman"
							name="gender"
							value="1"
							checked
						/>女
						{{/if}}
					</div>
				</div>
				{{/each}}

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button
							type="submit"
							class="btn btn-primary form-control"
						>
							提交编辑
						</button>
					</div>
				</div>
			</form>
		</div>

		<script src="/js/jquery.min.js"></script>
		<script>
			$("#uname").blur(function () {
				var span = $("#err");
				var un = $(this).val().trim();
				if (un === "") {
					span.html("用户名不能为空").css("color", "red");
				} else {
					$.ajax({
						url: "/api/chkExist",
						type: "get",
						data: { uname: un },
						dataType: "json",
						success: (obj) => {
							// console.log('obj',obj)
							// obj = JSON.parse(obj.responseText)

							if (obj.result === "ok") {
								span.html("有效用户名").css("color", "green");
							} else {
								span.html(obj.message).css("color", "red");
							}
						},
					});
				}
			});
		</script>
	</body>
</html>
